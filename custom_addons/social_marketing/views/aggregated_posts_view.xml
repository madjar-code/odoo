<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_aggregated_post_form" model="ir.ui.view">
            <field name="name">marketing.aggregated.posts.form</field>
            <field name='model'>marketing.aggregated.posts</field>
            <field name='arch' type='xml'>
                <form>
                    <sheet>
                        <group>
                            <field
                                name="account_ids"
                                widget="many2many_checkboxes"
                            />
                            <field name="message"/>
                            <field name="state"/>
                            <field name="post_ids">
                                <tree
                                    delete="0"
                                    quick_add="False"
                                >
                                    <field name="social_id"/>
                                    <field name="message"/>
                                    <field name="state"/>
                                    <field name="schedule_time"/>
                                    <field name="image_ids"/>
                                    <field name="comment_ids">
                                        <tree delete="0">
                                            <field name="message"/>
                                        </tree>
                                    </field>
                                    <!-- <field name="likes_qty"/>
                                    <field name="reposts_qty"/>
                                    <field name="views_qty"/>
                                    <field name="comments_qty"/> -->
                                    <!-- <button
                                        string="Unpin Post"
                                        name="action_unpin_post"
                                        type="object"
                                        class="oe_highlight"
                                    /> -->
                                </tree>
                            </field>
                            <!-- <field
                                name="now_flag"
                                widget="boolean_toggle"
                                attrs="{'invisible': ['|', ('state', '=', 'posted'), ('state', '=', 'scheduled')]}"
                            /> -->
                            <!-- <field
                                name="schedule_time"
                                attrs="{'invisible': ['|', ('now_flag', '=', False), ('state', '=', 'posted')]}"
                            /> -->
                            <field
                                name="schedule_time"
                                attrs="{'invisible': [('state', '=', 'posted')]}"
                            />
                        </group>
                        <div class="oe_form_buttons">
                            <button
                                name="action_initialize_posts"
                                string="Initialize"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('id', '!=', False)]}"
                            />
                            <button
                                name="action_update_posts"
                                string="Update"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('id', '=', False)]}"
                            />
                            <!-- <button
                                name="action_publish_posts"
                                string="Publish Now"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': ['|', ('post_ids', '=', []), ('now_flag', '=', True)]}"
                            /> -->
                            <button
                                name="action_publish_posts"
                                string="Publish Now"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': ['|', ('post_ids', '=', []), ('state', '=', 'posted')]}"
                            />
                            <!-- <button
                                name="action_publish_posts"
                                string="Schedule"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': ['|', ('now_flag', '=', False), ('state', '=', 'scheduled')]}"
                            /> -->
                            <!-- <button
                                name="action_schedule_posts"
                                string="Schedule"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('post_ids', '=', [])]}"
                            /> -->
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        # сделать несколько изображений загрузку.

        <record id="view_aggregated_posts_tree" model="ir.ui.view">
            <field name="name">marketing.aggregated.posts.tree</field>
            <field name="model">marketing.aggregated.posts</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="message"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>