<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_accounts_form" model="ir.ui.view">
            <field name="name">marketing.accounts.posts.form</field>
            <field name="model">marketing.accounts</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="social_media"/>
                            <field name="id_name"/>
                            <field name="social_id"/>
                            <field name="full_name"/>
                            <field name="fb_credentials_id"/>
                            <field name="li_credentials_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_accounts_tree" model="ir.ui.view">
            <field name="name">marketing.accounts.posts.tree</field>
            <field name="model">marketing.accounts</field>
            <field name="arch" type="xml">
                <tree delete="false">
                    <field name="social_media"/>
                    <field name="id_name"/>
                    <field name="social_id"/>
                    <field name="full_name"/>
                    <button
                        string="Delete"
                        type="object"
                        class="oe_highlight"
                        confirm="Are you sure you want to delete this account?"
                        icon="fa-trash-o"
                        name="unlink"
                    />
                </tree>
            </field>
        </record>

        <record id="view_social_posts_form" model="ir.ui.view">
            <field name="name">marketing.posts.form</field>
            <field name="model">marketing.posts</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="social_id"/>
                            <field name="posted_time"/>
                            <field name="state"/>
                            <field name="scheduled_action_id"/>
                            <field name="message"/>
                            <field name="account_id"/>
                            <field name="image_ids">
                                <tree>
                                    <field name="social_id"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="image" string="Media Size"/>
                                    <field
                                        name="image"
                                        widget="image"
                                        string="Image Preview"
                                        class="oe_avatar"
                                        options='{"preview_image": "image"}'
                                    />
                                </tree>
                            </field>
                            <field
                                name="now_flag"
                                widget="boolean_toggle"
                                attrs="{'invisible': ['|', ('state', '=', 'posted'), ('state', '=', 'scheduled')]}"
                            />
                            <field
                                name="schedule_time"
                                attrs="{'invisible': ['|', ('now_flag', '=', False), ('state', '=', 'posted')]}"
                            />
                            <button
                                name='action_pull_comments'
                                string='Pull Comments'
                                type='object'
                                class='oe_highlight'
                                attrs="{'invisible': [('state', '!=', 'posted')]}"
                            />
                            <button
                                name='action_push_comments'
                                string="Push Comments"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'posted')]}"
                            />
                        </group>
                        <group>
                            <field name="comment_ids" widget="one2many_list"
                                    attrs="{'invisible': [('state', '!=', 'posted')]}">
                                <tree default_order="posted_time" editable="top" sample="1" multi_edit="1">
                                    <field name="id"/>
                                    <field name="parent_id"/>
                                    <field name="message"/>
                                    <field name="state"/>
                                    <field name="author_id" invisible="1"/>
                                    <field name="posted_time" invisible="1"/>
                                    <field name="has_lead_comment"/>
                                    <field name="has_account_relation"/>
                                    <button
                                        string="Create Lead"
                                        name="action_create_lead"
                                        type="object"
                                        class="oe_highlight"
                                        attrs="{'invisible': ['|', ('has_lead_comment', '=', True), ('has_account_relation', '=', True)]}"
                                    />
                                    <button
                                        string="Go to Lead"
                                        name="action_go_to_lead"
                                        type="object"
                                        class="oe_highlight"
                                        attrs="{'invisible': ['|', ('has_lead_comment', '=', False), ('has_account_relation', '=', True)]}"
                                    />
                                </tree>
                            </field>
                        </group>
                        <div class="oe_form_buttons">
                            <button
                                name="action_cancel"
                                string="Cancel"
                                type="object"
                                class="oe_highlight"
                            />
                            <button
                                name="action_finish_later"
                                string="Save"
                                type="object"
                                class="oe_highlight"
                            />
                            <button
                                name="action_publish_post"
                                string="Publish Now"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': ['|', ('state', '=', 'posted'), ('state', '=', 'posting')]}"
                            />
                            <button
                                name="action_create_post"
                                string="Schedule"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': ['|', ('now_flag', '=', False), ('state', '!=', 'draft')]}"
                            />
                            <button
                                name="action_update_post"
                                string="Update Post"
                                type="object"
                                class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'posted')]}"
                            />
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_social_posts_tree" model="ir.ui.view">
            <field name="name">marketing.posts.tree</field>
            <field name="model">marketing.posts</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="social_id"/>
                    <field name="message"/>
                    <field name="account_id"/>
                    <field name="schedule_time"/>
                    <field name="posted_time"/>
                    <field name="state"/>
                    <field name="likes_qty"/>
                    <field name="reposts_qty"/>
                    <field name="views_qty"/>
                    <field name="comments_qty"/>
                    <field name="image_ids"/>
                    <header>
                        <button
                            name='pull_posts'
                            string='Pull Posts'
                            type='object'
                            class='oe_highlight'
                        />
                        <button
                            name='push_posts'
                            string='Push Posts'
                            type='object'
                            class='oe_highlight'
                        />
                        <button
                            name="action_delete_post"
                            string="Delete Selected Post"
                            type="object"
                            class='oe_highlight'
                        />
                    </header>
                </tree>
            </field>
        </record>

        <record id="view_marketing_posts_calendar" model="ir.ui.view">
            <field name="name">marketing.posts.calendar</field>
            <field name="model">marketing.posts</field>
            <field name="arch" type="xml">
                <calendar
                    string="Marketing Posts Calendar"
                    date_start="schedule_time"
                    quick_add="False"
                    color="account_id"
                >
                <field
                    name="account_id"
                    invisible="1"
                    filters="1"
                />
                </calendar>
            </field>
        </record>
    </data>
</odoo>